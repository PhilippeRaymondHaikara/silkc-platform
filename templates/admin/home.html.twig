
<form action="{{ path('admin_read') }}" method="post">
    <input type="hidden" value="[]" id="notifications-read" />
    <button type="submit" class="btn btn-primary btn-read" disabled>{{ 'notification.mark_selected_as_read'|trans({}, 'trad') }}</button>
</form>

<table id="datatable-subject" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th style="text-align: center; width: 20px;"><input type="checkbox" class="selectAll" /></th>
            <th>{{ 'notification.label.date'|trans({}, 'trad') }}</th>
            <th>{{ 'notification.label.subject'|trans({}, 'trad') }}</th>
        </tr>
    </thead>
    <tbody>
        {% if notifications is defined and notifications is iterable and notifications|length > 0 %}
            {% for notification in notifications %}
                <tr class="{{ (notification.isRead == false) ? 'font-weight-bold' }}" data-id="{{ notification.id }}">
                    <td style="text-align: center;"><input type="checkbox" class="editor-active"></td>
                    <td>{{ notification.createdAt|date('Y/m/d') }}</td>
                    <td>{{ notification.title }}</td>
                </tr>
            {% endfor %}
        {% else %}
            <tr><td colspan="3">{{ 'notification.no_item'|trans({}, 'trad') }}</td></tr>
        {% endif %}
    </tbody>
</table>