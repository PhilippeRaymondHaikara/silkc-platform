<table id="datatable-user" class="table table-striped table-bordered" style="width:100%">
    <thead>
    <tr>
        <th>{{ 'user.label'|trans({}, 'trad') }}</th>
        <th>{{ 'user.description'|trans({}, 'trad') }}</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% if users is defined and users is iterable and users|length > 0 %}
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username  }}</td>
                <td>{{ user.firstname  }}</td>
                <td>{{ user.lastname  }}</td>
                <td>
                    <button class="btn btn-info" data-id="{{ user.id }}">
                        <i class="fas fa-ban"></i> {{ 'button.suspend'|trans({}, 'trad') }}
                    </button>
                </td>
            </tr>
        {% endfor %}
    {% endif %}
    </tbody>
</table>
