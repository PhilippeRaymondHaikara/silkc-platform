{{ form_start(password_form, {attr: attr|default({})}) }}
<div class="form-block">
	<div class="form-group col-md-6 mx-auto">
		<label for="current-password">Current password</label>
		<div class="input-group mb-3">
			<div class="input-group-prepend">
				<span class="input-group-text">
					<i class="fas fa-lock"></i>
				</span>
			</div>
			{{ form_widget(password_form.currentPassword) }}
		</div>
	</div>

	<div class="form-group col-md-6 mx-auto">
		<label for="new-password">New password</label>
		<div class="input-group mb-3">
			<div class="input-group-prepend">
				<span class="input-group-text">
					<i class="fas fa-lock"></i>
				</span>
			</div>
			{{ form_widget(password_form.password.first) }}
		</div>
	</div>

	<div class="form-group col-md-6 mx-auto">
		<label for="confirm-new-password">Confirm new password</label>
		<div class="input-group mb-3">
			<div class="input-group-prepend">
				<span class="input-group-text">
					<i class="fas fa-lock"></i>
				</span>
			</div>
			{{ form_widget(password_form.password.second) }}
		</div>
	</div>

	<div class="form-group button-group text-center">
		{{ form_widget(password_form.save) }}
	</div>
</div>
{{ form_end(password_form) }}
