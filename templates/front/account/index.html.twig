{% extends 'front/layout.html.twig' %}

{% block title %}Account
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	{{ encore_entry_link_tags('account') }}
{% endblock %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<section id="account">

					<div class="d-flex justify-content-end">
						<div class="d-flex flex-column" id="profile-completion">
                            <span>Profile completion</span>
							<div class="progress">
								<div class="progress-bar" role="progressbar" style="width: {{ app.user.completion }}%;" aria-valuenow="{{ app.user.completion }}" aria-valuemin="0" aria-valuemax="100">{{ app.user.completion }}%</div>
							</div>
						</div>
					</div>

					<ul class="nav nav-tabs" id="account-tab" role="tablist">
						<li class="nav-item">
							<a class="nav-link active" id="personal_informations-tab" data-toggle="tab" href="#content-personal_informations" role="tab"><i class="fas fa-user-alt"></i> Personal informations</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" id="work-tab" data-toggle="tab" href="#content-work" role="tab"><i class="far fa-list-alt"></i> Work</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" id="training-tab" data-toggle="tab" href="#content-training" role="tab"><i class="fas fa-graduation-cap"></i> Training</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" id="skills-tab" data-toggle="tab" href="#content-skills" role="tab"><i class="fas fa-list"></i> Skills</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" id="change_password-tab" data-toggle="tab" href="#content-change_password" role="tab"><i class="fas fa-key"></i> Change password</a>
						</li>
					</ul>

					<div class="tab-content" id="account-tab-content">
						<div class="tab-pane fade show active" id="content-personal_informations" role="tabpanel">
							{% include 'front/account/personal_informations.html.twig' %}
						</div>
						<div class="tab-pane fade" id="content-work" role="tabpanel">
							{% include 'front/account/work.html.twig' %}
						</div>
						<div class="tab-pane fade" id="content-training" role="tabpanel">
							{% include 'front/account/training.html.twig' %}
						</div>
						<div class="tab-pane fade" id="content-skills" role="tabpanel">
							{% include 'front/account/skills.html.twig' %}
						</div>
						<div class="tab-pane fade" id="content-change_password" role="tabpanel">
							{% include 'front/account/change_password.html.twig' %}
						</div>
					</div>
				</section>
			</div>
		</div>
	</div>

    {% include 'front/elements/modal.html.twig' %}
{% endblock %}


{% block javascripts %}
	{{ encore_entry_script_tags('main') }}
	{{ encore_entry_script_tags('account') }}
{% endblock %}
