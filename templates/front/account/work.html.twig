<fieldset>
	{# Current job #}
	<div class="info">
		Please indicate your current job. We will use it to guess your current skills.
	</div>

	<div class="d-inline-flex align-items-end">
		<label for="current_job-input">Current job</label>
		<input type="text" class="form-control" id="current_job-input">
	</div>

	<div id="list-current_job" class="list-job">
		<ul class="list-group">
			{% for i in 0..1 %}
				<li class="list-group-item d-flex justify-content-between align-items-center">
					<div>
						<a href="#" class="detail" data-toggle="modal" data-target="#exampleModal">
							<span>commercial director</span>
							<i class="fas fa-question-circle text-primary"></i>
						</a>
					</div>
					<div class="d-inline-flex align-items-center justify-content-end">
						<a href="" class="jobs-linked mr-2">8</a>
						<a href="" class="text-danger rmv" title="Remove this job">
							<i class="fas fa-times-circle"></i>
						</a>
					</div>
				</li>
			{% endfor %}
		</ul>
	</div>
</fieldset>
{# End: Current job #}

<fieldset>
	{# Previous job #}
	<div class="info">
		Please indicate any previous jobs. We will use them to guess skills. Use the + button to add more.
	</div>

	<div class="d-inline-flex align-items-end">
		<label for="previous_job-input">Previous job</label>
		<input type="text" class="form-control" id="previous_job-input">
	</div>

	<div id="list-previous_job" class="list-job">
		<ul class="list-group">
			{% for i in 0..6 %}
				<li class="list-group-item d-flex justify-content-between align-items-center">
					<div>
						<a href="#" class="detail" data-toggle="modal" data-target="#exampleModal">
							<span>numerical tool and process control programmer</span>
							<i class="fas fa-question-circle text-primary"></i>
						</a>
					</div>
					<div class="d-inline-flex align-items-center justify-content-end">
						<a href="" class="jobs-linked mr-2">10</a>
						<a href="" class="text-danger rmv" title="Remove this job">
							<i class="fas fa-times-circle"></i>
						</a>
					</div>
				</li>
			{% endfor %}
		</ul>
	</div>
</fieldset>
{# End: Previous job #}

<fieldset>
	{# Desired job #}
	<div class="info">
		Please indicate your desired jobs. We will use them to suggest the best training based on your location and current skillset.
	</div>

	<div class="d-inline-flex align-items-end">
		<label for="previous_job-input">Desired job</label>
		<input type="text" class="form-control" id="desired_job-input">
	</div>

	<div id="list-desired_job" class="list-job">

    		<ul class="list-group">
			{% for i in 0..1 %}
				<li class="list-group-item d-flex justify-content-between align-items-center">
					<div>
						<a href="#" class="detail" data-toggle="modal" data-target="#exampleModal">
							<span>commercial director</span>
							<i class="fas fa-question-circle text-primary"></i>
						</a>
					</div>
					<div class="d-inline-flex align-items-center justify-content-end">
					<a href="" class="jobs-linked mr-2">10</a>
					<a href="" class="text-danger rmv mr-2" title="Remove this job">
						<i class="fas fa-times-circle"></i>
					</a>
					<a href="" class="search" title="Search for training required for this job">
						<i class="fas fa-search-plus"></i>
					</a>
					</div>
				</li>
			{% endfor %}
		</ul>
	</div>
</fieldset>
{# Desired job #}

<div class="form-group button-group text-right">
	<button type="submit" class="btn btn-primary">Save</button>
</div>
