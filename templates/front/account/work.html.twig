<fieldset>
	{# Current job #}
	<div class="info">
		{{ 'please_indicate_your_current_job'|trans }}
	</div>

	<div class="d-inline-flex align-items-end add-job add-current-job">
		<label for="current_job-input">{{ 'current_job'|trans }}</label>
		{% include 'front/elements/input_add_search.html.twig'
            with {
                'id': 'current_job-input',
                'url': '/apip/occupations',
                'autocomplete': true,
                'formats': 'json',
                'pagination': 'false',
                'name': 'current_job',
                'placeholder': ""
            }
        %}
	</div>

	<div id="list-current_job" class="list-job">
		<ul class="list-group">
			{% if currentOccupations is defined %}
				{% for k, row in currentOccupations %}
					{% set occupation = row.occupation %}
					{% set skills = row.skills is defined and row.skills is not empty ? row.skills : false %}

					<li class="list-group-item d-flex justify-content-between align-items-center">
						<div>
							<a href="#" class="detail" data-name="{{ occupation.preferredLabel }}" data-description="{{ occupation.description }}" data-id="{{ occupation.id }}">
								<span>{{ occupation.preferredLabel }}</span>
								<i class="fas fa-question-circle text-primary"></i>
							</a>
						</div>
						<div class="d-inline-flex align-items-center justify-content-end">
							<a href="#" class="detail mr-2" data-name="{{ occupation.preferredLabel }}" data-description="{{ occupation.description }}" data-id="{{ occupation.id }}">
								<span class="badge badge-success">{{ skills is defined and skills is not empty ? skills|length : 0 }}</span>
							</a>
							<a href="#" class="text-danger item rmv" title="Remove this job" data-name="{{ occupation.preferredLabel }}" data-id="{{ occupation.id }}" data-type="currentOccupations">
								<i class="fas fa-trash-alt text-danger"></i>
							</a>
						</div>
					</li>
				{% endfor %}
			{% endif %}
		</ul>
	</div>
</fieldset>
{# End: Current job #}

