{% extends 'front/layout.html.twig' %}

{% block title %}Admin
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	{{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<section id="admin">
					<ul class="nav nav-tabs" id="account-tab" role="tablist">
						<li class="nav-item">
							<a class="nav-link {% if (tab is defined and (tab == 1 or tab == false)) or tab is not defined %}active{% endif %}" id="home-tab" data-toggle="tab" href="#content-home" role="tab"><i class="fas fa-home"></i> Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if tab is defined and tab == 2 %}active{% endif %}" id="personal_informations-tab" data-toggle="tab" href="#content-personal_informations" role="tab"><i class="fas fa-building"></i> Personal informations</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if tab is defined and tab == 3 %}active{% endif %}" id="work-tab" data-toggle="tab" href="#content-work" role="tab"><i class="far fa-list-alt"></i> Work</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if tab is defined and tab == 4 %}active{% endif %}" id="training-tab" data-toggle="tab" href="#content-training" role="tab"><i class="fas fa-graduation-cap"></i> Training</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if tab is defined and tab == 5 %}active{% endif %}" id="change_password-tab" data-toggle="tab" href="#content-change_password" role="tab"><i class="fas fa-key"></i> Change password</a>
						</li>
					</ul>

					<div class="tab-content" id="account-tab-content">
						<div class="tab-pane fade {% if (tab is defined and (tab == 1 or tab == false)) or tab is not defined %}show active{% endif %}" id="content-home" role="tabpanel">
							{% include 'front/admin/home.html.twig' %}
						</div>
						<div class="tab-pane fade {% if tab is defined and tab == 2 %}show active{% endif %}" id="content-personal_informations" role="tabpanel">
							{% include 'front/admin/personal_informations.html.twig' %}
						</div>
						<div class="tab-pane fade {% if tab is defined and tab == 3 %}show active{% endif %}" id="content-work" role="tabpanel">
							{% include 'front/admin/work.html.twig' %}
						</div>
						<div class="tab-pane fade {% if tab is defined and tab == 4 %}show active{% endif %}" id="content-training" role="tabpanel">
							{% include 'front/admin/training.html.twig' %}
						</div>
						<div class="tab-pane fade {% if tab is defined and tab == 5 %}show active{% endif %}" id="content-change_password" role="tabpanel">
							{% include 'front/admin/change_password.html.twig' %}
						</div>
					</div>
				</section>
			</div>
		</div>
	</div>

	{% include 'front/elements/modal.html.twig' %}
{% endblock %}


{% block javascripts %}
	{{ encore_entry_script_tags('main') }}
	{{ encore_entry_script_tags('admin') }}
    {{ encore_entry_script_tags('common') }}
{% endblock %}
