{% extends 'front/layout.html.twig' %}

{% block title %}Institutional
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	{{ encore_entry_link_tags('institutional') }}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<section id="institutional">
					<ul class="nav nav-tabs" id="account-tab" role="tablist">
						<li class="nav-item">
							<a class="nav-link {% if (tab_active is defined and (tab_active == 1 or tab_active == false)) or tab_active is not defined %}active{% endif %}" id="personal_informations-tab" data-toggle="tab" href="#content-personal_informations" role="tab"><i class="fas fa-building"></i> Institutional informations</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if tab_active is defined and tab_active == 2 %}active{% endif %}" id="training-tab" data-toggle="tab" href="#content-training" role="tab"><i class="fas fa-graduation-cap"></i> Training</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if tab_active is defined and tab_active == 3 %}active{% endif %}" id="change_password-tab" data-toggle="tab" href="#content-change_password" role="tab"><i class="fas fa-key"></i> Change password</a>
						</li>
					</ul>

					<div class="tab-content" id="account-tab-content">
						<div class="tab-pane fade {% if (tab_active is defined and (tab_active == 1 or tab_active == false)) or tab_active is not defined %}show active{% endif %}" id="content-personal_informations" role="tabpanel">
							{% include 'front/institutional/institutional_informations.html.twig' %}
						</div>
						<div class="tab-pane fade {% if tab_active is defined and tab_active == 2 %}show active{% endif %}" id="content-training" role="tabpanel">
							{% include 'front/institutional/training.html.twig' %}
						</div>
						<div class="tab-pane fade {% if tab_active is defined and tab_active == 3 %}show active{% endif %}" id="content-change_password" role="tabpanel">
							{% include 'front/institutional/change_password.html.twig' %}
						</div>
					</div>
				</section>
			</div>
		</div>
	</div>

	{% include 'front/elements/modal.html.twig' %}
{% endblock %}


{% block javascripts %}
	{{ encore_entry_script_tags('main') }}
	{{ encore_entry_script_tags('institutional') }}
{% endblock %}
