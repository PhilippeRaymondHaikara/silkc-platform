{% extends 'front/layout.html.twig' %}

{% block title %}Institutional
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	{{ encore_entry_link_tags('institutional') }}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<section id="institutional">
					<ul class="nav nav-tabs" id="account-tab" role="tablist">
						<li class="nav-item">
							<a class="nav-link" id="personal_informations-tab" data-toggle="tab" href="#content-personal_informations" role="tab">Institutional informations</a>
						</li>
						<li class="nav-item">
							<a class="nav-link active" id="training-tab" data-toggle="tab" href="#content-training" role="tab">Training</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" id="change_password-tab" data-toggle="tab" href="#content-change_password" role="tab">Change password</a>
						</li>
					</ul>

					<div class="tab-content" id="account-tab-content">
						<div class="tab-pane fade" id="content-personal_informations" role="tabpanel">
							{% include 'front/institutional/institutional_informations.html.twig' %}
						</div>
						<div class="tab-pane fade show active" id="content-training" role="tabpanel">
							{% include 'front/institutional/training.html.twig' %}
						</div>
						<div class="tab-pane fade" id="content-change_password" role="tabpanel">
							{% include 'front/institutional/change_password.html.twig' %}
						</div>
					</div>
				</section>
			</div>
		</div>
	</div>

	{% include 'front/elements/modal.html.twig' %}
{% endblock %}


{% block javascripts %}
	{{ encore_entry_script_tags('main') }}
	{{ encore_entry_script_tags('institutional') }}
{% endblock %}
